{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["esnext"],
    "types": [
      "@types/node",
      "@types/express",
      "@types/express-serve-static-core"
    ],
    "moduleResolution": "Node",
    "sourceMap": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,
    "removeComments": true,
    "declaration": true,
    "composite": false,
    "emitDeclarationOnly": false
  },
  "include": ["src/**/*", "routes"],
  "exclude": [
    "node_modules",
    "**/*.d.ts",
    "ecosystem.config.cjs",
    "src/*test*",
    "routes"
  ]
}
